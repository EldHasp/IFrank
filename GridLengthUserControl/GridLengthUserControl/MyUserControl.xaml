<UserControl x:Class="GridLengthUserControl.MyUserControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:GridLengthUserControl"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <Grid x:Name="MainGrid">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="0"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>
        <TextBlock Text="{Binding ActualWidth, Mode=OneWay, RelativeSource={RelativeSource Self}}"
                   Background="AliceBlue"/>
        <TextBlock Grid.Column="1" Text="{Binding ActualWidth, Mode=OneWay, RelativeSource={RelativeSource Self}}"
                   Background="LightYellow"/>
    </Grid>
</UserControl>
